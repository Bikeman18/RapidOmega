<!DOCTYPE html>
<html>
  <head>
    <title>豆姆微信平台</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <meta name="referrer" content="no-referrer" />
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="hold-transition skin-blue sidebar-mini">
   <div class="hidden" id="loading">
     <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
   </div>
  <div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

      <!-- Logo -->
      <a href="" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>W</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Wechat</b></span>
      </a>

      <!-- Header Navbar -->
      <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li class="dropdown">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_admin.name %></span>
            </a>
            <ul class="dropdown-menu">
                <!-- <li>
                  <a href="#" class="btn btn-default btn-flat">更改密码</a>
                </li> -->
                <li>
                  <%= link_to "注销", admin_sign_out_path, class:"btn btn-default btn-flat",method: :delete %>
                </li>
            </ul>
          </li>
          </ul>
        </div>

      </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

      <!-- sidebar: style can be found in sidebar.less -->
      <section class="sidebar">

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
          <li class="header">功能</li>
          <!-- Optionally, you can add icons to the links -->
          <li class="<%= 'active' if current_page?(admin_menu_path) %>"><a href="<%= edit_admin_menu_path %>"><i class="fa fa-circle-o"></i> <span>自定义菜单</span></a></li>
          <li class="treeview <%= 'active' if controller_name.include?("response") || controller_name.include?("rule") %>">
            <a href="#"><i class="fa fa-circle-o"></i> <span>自动回复</span>
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>
            <ul class="treeview-menu">
              <li><a href="<%= admin_response_rules_path %>">自动回复规则</a></li>
              <li><a href="<%= admin_responses_path %>">自动回复内容</a></li>
              <% super_admins_only do %>
                <li><a href="<%= admin_rules_path %>">自动回复触发</a></li>
              <% end %>
            </ul>
          </li>
        </ul>
        <!-- /.sidebar-menu -->
      </section>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <section class="content">
        <%= yield %>
        <!-- Your Page Content Here -->

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
      <!-- To the right -->
      <div class="pull-right hidden-xs">
        微信公众号管理
      </div>
      <!-- Default to the left -->
      <strong>Copyright &copy; <%= Time.now.year %> <a href="http://intro.domelab.com" target="_blank">Dome</a>.</strong> All rights reserved.
    </footer>
  </div>

  </body>
</html>
