<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th>回复类型</th>
      <th>回复内容</th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= I18n.t "msgtype.#{response.msgtype}" %></td>
        <td><%= response.message %></td>
        <td><%= link_to '编辑', edit_admin_response_path(response) %></td>
        <td><%= link_to '删除', admin_response_path(response), method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

