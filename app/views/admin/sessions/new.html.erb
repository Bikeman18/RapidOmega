<div class="login-box">
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "callout callout-#{key}" %>
  <% end %>
  <div class="login-box-body">
    <p class="login-box-msg">管理员登录</p>

    <%= form_for(:session, url: admin_sign_in_path) do |f| %>
      <div class="form-group has-feedback">
         <%= f.email_field :email, class: 'form-control',placeholder: '邮箱' %>
         <span class="fa fa-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control',placeholder:'密码' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> 记住我
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit "登录", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
     <% end %>
  </div>
</div>
